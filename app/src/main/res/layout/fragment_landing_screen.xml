<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.intelliteq.fea.ammocalculator.LandingScreenFragment">

    <Button
        android:id="@+id/new_input_button"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:text="new input"
        app:layout_constraintEnd_toEndOf="@+id/saved_calculation_button"
        app:layout_constraintStart_toStartOf="@+id/saved_calculation_button"
        app:layout_constraintTop_toBottomOf="@+id/saved_calculation_button" />

    <Button
        android:id="@+id/new_calculation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:text="new calculation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saved_calculation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="saved calculation"
        app:layout_constraintEnd_toEndOf="@+id/new_calculation_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/new_calculation_button"
        app:layout_constraintTop_toBottomOf="@+id/new_calculation_button" />
</androidx.constraintlayout.widget.ConstraintLayout>

    </layout>